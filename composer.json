{
    "name": "leertech/tailwind-email",
    "description": "A Laravel package for sending emails with Tailwind CSS",
    "type": "library",
    "autoload": {
        "psr-4": {
            "TailwindEmail\\": "src/"
        }
    },
    "require": {
    "php": "^8.1",
    "illuminate/support": "^8.0|^9.0|^10.0|^11.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TailwindEmail\\TailwindEmailServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Your Name",
            "email": "your-email@example.com"
        }
    ],
    "scripts": {
        "build:email": "NODE_ENV=production tailwindcss -c tailwind.email.config.js -i resources/css/email.css -o public/css/email-compiled.css"
    },
    "license": "MIT"
}
